generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Property {
  id                String        @id @default(uuid())
  
  // Address
  street            String?       // Make optional with ? or remove this line if using address
  city              String
  state             String
  zipCode           String
  country           String        @default("USA")
  
  // Purchase Details
  purchasePrice     Float
  purchaseDate      DateTime
  depositAmount     Float?   // Make optional with ?
  closingCosts      Float?   // Make optional with ?
  
  // Current Valuation
  estimatedValue    Float
  lastValuationDate DateTime
  valuationSource   String
  
  // Mortgage
  outstandingBalance Float
  interestRate      Float
  monthlyPayment    Float
  lender            String?
  mortgageStartDate DateTime?
  termYears         Int?
  
  // Property Details
  propertyType      String        // Changed from PropertyType enum to String
  bedrooms          Int?
  bathrooms         Float?
  sqm               Int?          // Changed from sqft to sqm (square meters)
  yearBuilt         Int?
  
  // Rental Info
  monthlyRent       Float?
  isRented          Boolean       @default(false)
  tenantName        String?
  leaseStart        DateTime?
  leaseEnd          DateTime?
  
  // Expenses
  annualPropertyTax Float
  insurance         Float
  hoaFees           Float?
  maintenanceBudget Float
  
  // Media
  images            String?       // Changed from Json to String - stores JSON as serialized string
  documents         String?       // Changed from Json to String - stores JSON as serialized string
  
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt
  
  transactions      Transaction[]
  mortgages         Mortgage[]
  expenses          Expense[]
  
  @@index([city, state])
}

model Transaction {
  id                String    @id @default(uuid())
  propertyId        String
  property          Property  @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  
  transactionType   String    // Rent, Management Fee, Maintenance, Insurance, Mortgage, Rates, Body Corp Fees, Lawyer Fees, Accountant Fees, Other
  amount            Float
  date              DateTime
  description       String?
  status             String   @default("Complete") // Complete, Pending, Void
  isIncome          Boolean  @default(false) // true for income (rent), false for expenses
  
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  
  @@index([propertyId, date])
  @@index([transactionType])  // Changed from [type] to [transactionType]
}

model Mortgage {
  id                String    @id @default(uuid())
  propertyId        String
  property          Property  @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  
  lender            String
  loanAmount        Float
  interestRate      Float
  termYears         Int
  startDate         DateTime
  monthlyPayment    Float
  outstandingBalance Float
  mortgageType      String    // Fixed, Variable, Interest-only, etc.
  
  notes             String?
  
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
}

model Expense {
  id                String    @id @default(uuid())
  propertyId        String
  property          Property  @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  
  expenseType       String    // Rates, Insurance, Body Corporate, Property Management, Maintenance, etc.
  amount            Float
  frequency         String    // Monthly, Quarterly, Annually, One-time
  description       String?
  startDate         DateTime
  endDate           DateTime?
  isRecurring       Boolean   @default(true)
  
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
}
