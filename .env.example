# Database URL for SQLite (default - local development)
DATABASE_URL="file:./dev.db"

# For PostgreSQL (optional - cloud deployment)
# DATABASE_URL="postgresql://user:password@localhost:5432/property_manager"

# Application Settings
NODE_ENV="development"
PORT=3000

# Localization Settings
NEXT_PUBLIC_DATE_FORMAT="dd/MM/yyyy"
NEXT_PUBLIC_LOCALE="en-NZ"
NEXT_PUBLIC_CURRENCY="NZD"

# Optional: Add any API keys or secrets here
# NEXT_PUBLIC_APP_URL="http://localhost:3000"

# JWT Secret (generate with: openssl rand -base64 32)
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"

# App Configuration
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR="./public/uploads"
